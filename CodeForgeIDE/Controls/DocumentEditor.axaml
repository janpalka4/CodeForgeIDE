<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:CodeForgeIDE.Controls;assembly=CodeForgeIDE"
			 xmlns:up="clr-namespace:Avalonia.UpDock.Controls;assembly=Avalonia.UpDock"
			 xmlns:edit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:DataType="local:DocumentEditor"
             x:Class="CodeForgeIDE.Controls.DocumentEditor">

		<edit:TextEditor
			Name="textEditor"
			FontFamily="Cascadia Mono"
			FontSize="12"
			Background="{DynamicResource SemiGrey0}"
			Foreground="{DynamicResource Grey1}"
			BorderThickness="0"
			ShowLineNumbers="True"
			LineNumbersForeground="{DynamicResource Grey2}"/>
</UserControl>
