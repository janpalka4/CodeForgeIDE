<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:CodeForgeIDE.Controls"
			 xmlns:core="clr-namespace:CodeForgeIDE.Core.Controls;assembly=CodeForgeIDE.Core"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CodeForgeIDE.Controls.SolutionExplorerItem"
			 x:DataType="local:SolutionExplorerItem">

	<StackPanel Orientation="Vertical">
		<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
			<core:GuiIcon Name="expandIcon" IconPath="avares://CodeForgeIDE/Assets/Icons/caret-right-8.svg" Width="8" Height="8" Margin="8 0" PointerPressed="GuiIcon_PointerPressed"/>
			<core:GuiIcon Name="fileIcon" IconPath="avares://CodeForgeIDE/Assets/Icons/file-folder.svg" Width="16" Height="16"/>
			<Label Content="{Binding TreeNode.Name}" Margin="8 0"/>
		</StackPanel>
		<StackPanel Name="ChildStack" Orientation="Vertical" Margin="28 0 0 0">
			
		</StackPanel>
	</StackPanel>
</UserControl>
